<?xml version="1.0" encoding="utf-8"?>
<!-- asdoc\MultiColSortableGridSkin.mxml -->
<!---
A light modification of the standard DataGridSkin. It overwrites the header
renderer to put the custom header for allwing multiple column sorting.
@see org.everest.flex.ui.renderers.MultiColSortableGridHeaderRenderer
@see spark.skins.spark.DataGridSkin
-->
<spark:DataGridSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                    xmlns:s="library://ns.adobe.com/flex/spark"
                    xmlns:spark="spark.skins.spark.*"
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:renderers="org.everest.flex.ui.renderers.*">
    <fx:Declarations>
        <!--- Defines the value of the headerRenderer property for the columnHeaderGroup.
              The default is spark.skins.spark.DefaultGridHeaderRenderer -->
        <fx:Component id="headerRenderer">
            <renderers:MultiColSortableGridHeaderRenderer xmlns:local="*"/>
        </fx:Component>
    </fx:Declarations>
</spark:DataGridSkin>
